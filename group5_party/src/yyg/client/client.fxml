<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane prefHeight="300.0" prefWidth="500.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
fx:controller="yyg.client.ClientController">
   <center>
      <TextArea fx:id="txtDisplay" editable="false" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="2.0" />
         </BorderPane.margin>
      </TextArea>
   </center>
   <bottom>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <BorderPane BorderPane.alignment="CENTER">
               <left>
                  <Button fx:id="btnConn" mnemonicParsing="false" prefHeight="30.0" text="Start" BorderPane.alignment="CENTER" />
               </left>
               <center>
                  <TextField fx:id="txtIP" prefHeight="30.0" promptText="SERVER IP" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </BorderPane.margin>
                  </TextField>
               </center>
               <right>
                  <TextField fx:id="txtNick" prefHeight="30.0" promptText="NICKNAME" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </BorderPane.margin>
                  </TextField>
               </right>
            </BorderPane>
         </center>
         <bottom>
            <BorderPane BorderPane.alignment="CENTER">
               <center>
                  <TextField fx:id="txtInput" prefHeight="30.0" promptText="CHAT" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </BorderPane.margin>
                  </TextField>
               </center>
               <right>
                  <Button fx:id="btnSend" mnemonicParsing="false" prefHeight="30.0" text="Send" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </BorderPane.margin>
                  </Button>
               </right>
            </BorderPane>
         </bottom>
      </BorderPane>
   </bottom>
</BorderPane>
