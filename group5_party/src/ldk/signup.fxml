<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <GridPane alignment="CENTER_LEFT" hgap="5.0" vgap="5.0">
              
               <children>
                  <Label text="아이디" />
                  <Label text="패스워드" GridPane.rowIndex="1" />
                  <Label text="패스워드 확인" GridPane.rowIndex="2" />
                  <Label fx:id="lblPMes" text="- 패스워드 중복 메시지" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="이름" GridPane.rowIndex="4" />
                  <Label text="닉네임" GridPane.rowIndex="5" />
                  <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1">
                     <children>
                        <TextField fx:id="txtId" maxWidth="140.0" />
                        <Button fx:id="btnICheck" mnemonicParsing="false" text="중복 확인" />
                     </children>
                  </HBox>
                  <PasswordField fx:id="pfPw" maxWidth="160.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <PasswordField fx:id="pfPCheck" maxWidth="160.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="txtName" maxWidth="140.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField fx:id="txtNick" maxWidth="140.0" promptText="없으면 이름" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </GridPane>
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Separator prefWidth="200.0" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="btnSign" mnemonicParsing="false" text="회원가입" />
                  <Button fx:id="btnCancel" mnemonicParsing="false" text="취소" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
