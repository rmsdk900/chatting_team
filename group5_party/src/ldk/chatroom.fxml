<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
fx:controller="ldk.PartyRoom">
   <center>
      <BorderPane BorderPane.alignment="TOP_RIGHT">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <center>
            <VBox spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Label  text="제목" />
                  <TextArea fx:id="txtDisplay" prefHeight="300.0" prefWidth="200.0" />
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </VBox>
         </center>
      </BorderPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="txtInput" prefWidth="400.0" />
            <Button fx:id="btnSend" mnemonicParsing="false" prefWidth="100.0" text="전송" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <right>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="참여자 목록" />
            <ListView fx:id="uList" prefHeight="300.0" prefWidth="200.0" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" right="10.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </right>
</BorderPane>
